<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"/>

        <TextView
            android:id="@+id/profile_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name: Naome Michel"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/profile_level"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Level: 001"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/profile_agency"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Agency: ACC"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/profile_web_agency"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Website: www.acc.com"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/profile_country"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Country: USA"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/profile_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phone: (647) 9762345"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/profile_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address: 62 Mayflower St. Sanford, FL, USA"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"/>

        <Button
            android:id="@+id/profile_btn_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="INFO"/>

        <Button
            android:id="@+id/profile_btn_sms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SMS"/>

        <Button
            android:id="@+id/profile_btn_call"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CALL" />

        <Button
            android:id="@+id/profile_btn_map"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MAP"/>

        <Button
            android:id="@+id/profile_btn_web"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="WEB"/>

        <Button
            android:id="@+id/profile_btn_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="IMG"/>

        <Button
            android:id="@+id/profile_btn_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BACK"/>


    </LinearLayout>

</ScrollView>
